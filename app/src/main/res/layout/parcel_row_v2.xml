<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:id="@+id/linearLayout">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/parcelName" android:layout_weight="1"
            android:textSize="24sp" android:paddingTop="5dp" android:paddingBottom="5dp" android:gravity="center|left"
            android:paddingLeft="40dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/parcelStatus" android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"/>
</LinearLayout>